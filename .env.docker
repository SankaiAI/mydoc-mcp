# Docker Environment Configuration for mydocs-mcp
# Copy this file to .env and customize for your deployment

# === MCP Server Configuration ===
MCP_TRANSPORT=stdio
LOG_LEVEL=INFO
DATABASE_PATH=/app/data/documents.db
MAX_DOCUMENT_SIZE=10485760

# === Document Directories ===
# Local path to your documents (mounted as /documents in container)
DOCUMENT_PATH=./examples/sample_documents

# Multiple document directories (comma-separated)
DOCUMENT_DIRECTORIES=/documents

# === Performance Configuration ===
MAX_CONCURRENT_CONNECTIONS=10
CACHE_TTL_SECONDS=3600
SEARCH_TIMEOUT_SECONDS=30

# === Security Configuration ===
# Enable encryption for sensitive documents (future feature)
# ENCRYPTION_ENABLED=false
# ENCRYPTION_KEY=your-encryption-key-here

# === Container Configuration ===
# Custom configuration path (optional)
CONFIG_PATH=./config

# Container resource limits
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=2.0

# === Logging Configuration ===
# Container log settings
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# === Development Options ===
# Enable development mode with hot reload
DEVELOPMENT_MODE=false

# Enable database web viewer on port 8080
ENABLE_DB_VIEWER=false

# === Network Configuration ===
# Custom network name (optional)
NETWORK_NAME=mydocs_mcp_network

# Port mappings for HTTP transport (future feature)
# HTTP_PORT=8000

# === Storage Configuration ===
# Named volume for persistent data
VOLUME_NAME=mydocs_mcp_data

# === Health Check Configuration ===
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3