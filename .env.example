# mydocs-mcp Configuration
# Copy this file to .env and update with your settings

# Document directories (comma-separated list)
DOCUMENT_DIRECTORIES=~/Documents,~/Desktop/notes

# Database path
DATABASE_PATH=./data/mydocs.db

# MCP Server settings
MCP_HOST=localhost
MCP_PORT=3000

# Logging level
LOG_LEVEL=INFO

# File watching settings
WATCH_ENABLED=true
WATCH_INTERVAL=5